<% flash.each do |type, msg| %>
  <% if type == 'alert' %>
    <%= content_tag :div, msg, class: "alert alert-danger position-absolute", role: :alert %>
  <% elsif type == 'notice' %>
    <%= content_tag :div, msg, class: "alert alert-primary position-absolute", role: :alert %>
  <% else %>
    <%= content_tag :div, msg, class: "alert alert-primary position-absolute", role: :alert %>
  <% end %>
<% end %>
